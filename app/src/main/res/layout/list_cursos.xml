<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/evalimg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@color/black"
                android:paddingRight="10dp" />

            <TextView
                android:id="@+id/lblCurso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/evalimg"
                android:layout_marginLeft="90dp"
                android:text="Curso: "
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/lblCurso"
                android:layout_alignTop="@+id/lblCurso"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="23dp"
                android:text="DescripciÃ³n"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/lblPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/lblCurso"
                android:layout_alignTop="@+id/lblDescripcion"
                android:layout_marginLeft="-1dp"
                android:layout_marginTop="27dp"
                android:text="Precio: "
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnComprar"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="108dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="14dp"
                android:layout_toEndOf="@+id/lblPrecio"
                android:text="Comprar"
                android:textSize="12sp" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>